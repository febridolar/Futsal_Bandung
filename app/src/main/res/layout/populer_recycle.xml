<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="#FAF9F7">

    <RelativeLayout
        android:id="@+id/parentLayoutPopuler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="#FAF9F7">

        <ImageView
            android:id="@+id/imagefutsal1"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/nama_tempat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/warna"
            android:fontFamily="@font/aclonica"
            android:text="Nama"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/alamat_tempat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/idalamat1"
            android:textAlignment="gravity"
            android:fontFamily="@font/buenard_bold"
            android:text="..."
            android:textColor="#302E2E"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/rating1"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:paddingRight="20dp"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:textStyle="bold"
            android:background="@drawable/rating_bg"
            android:layout_below="@+id/nama_tempat1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/rating"
            android:fontFamily="@font/buenard_bold"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="1dp"
            android:textColor="#fff"
            android:text="4.4"
            android:layout_below="@+id/nama_tempat1"/>

        <TextView
            android:id="@+id/idalamat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/buenard_bold"
            android:text="Alamat :"
            android:layout_below="@+id/rating1"
            android:textAlignment="gravity"
            android:textColor="#302E2E"
            android:textSize="9dp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>